#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_NXBOOT_UPDATER
	tristate "NX image updater example"
	default n
	---help---
		Enable the updater

if EXAMPLES_NXBOOT_UPDATER

config EXAMPLES_NXBOOT_UPDATER_PROGNAME
	string "Program name"
	default "nxboot_updater"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_NXBOOT_UPDATER_PRIORITY
	int "NX updater task priority"
	default 100

config EXAMPLES_NXBOOT_UPDATER_STACKSIZE
	int "NX updater stack size"
	default DEFAULT_TASK_STACKSIZE

endif
