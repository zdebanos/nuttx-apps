#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_NXBOOT_CONFIRM_IMAGE
	tristate "NXBoot Confirm Image Application"
	default n
	---help---
		Helper application that confirms newly updated image.

if EXAMPLES_NXBOOT_CONFIRM_IMAGE

config EXAMPLES_NXBOOT_CONFIRM_IMAGEPROGNAME
	string "Program name"
	default "nxboot_confirm"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_NXBOOT_CONFIRM_IMAGEPRIORITY
	int "Confirm Image task priority"
	default 100

config EXAMPLES_NXBOOT_CONFIRM_IMAGESTACKSIZE
	int "Confirm Image stack size"
	default DEFAULT_TASK_STACKSIZE

endif
